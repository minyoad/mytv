    <!--这个是按钮边框设置为四周 并且宽度为1-->
    <item
        android:right="2dp"
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <!--这个是背景颜色-->
            <solid android:color="@android:color/transparent" />
            <!--这个是按钮中的字体与按钮内的四周边距-->
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>